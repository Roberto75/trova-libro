@model MyWebApplication.Areas.Admin.Models.ModelHome
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/MasterPageAdmin.cshtml";
}

<h2>Index</h2>


<style>
    #main {
        background-image: url('@Url.Content("~/Content/Images/logoPoste.jpg")');
             background-repeat: no-repeat;
        background-position: center;
    }
</style>



<h3>Benvenuto @User.Identity.Name</h3>

<p>Version: @Model.version</p>
<p>MVC: @Model.versionMVC</p>



@if (Model.mailIsEnabled)
{
    <b>Mail is enabled: </b>
    <img class="mx-auto d-block" src="@Url.Content("~/Content/Images/Shared/ok.png")" border="0" alt="Passed" />
}
else
{
    <b>Mail is NOT enabled: </b>
    <img class="mx-auto d-block" src="@Url.Content("~/Content/Images/shared/error1_48x48.gif")" border="0" alt="Failed" />
}

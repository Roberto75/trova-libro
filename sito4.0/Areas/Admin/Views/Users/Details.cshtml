    <a class="btn btn-primary" href="@Url.Action("Index", "Users")">Torna alla lista</a>
    <a class="btn btn-secondary" href="@Url.Action("Edit", "Users", new { id = Model.Utente.userId })">Modifica <i class="fa fa-edit fa-fw"></i></a>
    <a class="btn btn-secondary" href="@Url.Action("Delete", "Users", new { id = Model.Utente.userId })">Elimina<i class="fa fa-trash fa-fw"></i></a>
</div>



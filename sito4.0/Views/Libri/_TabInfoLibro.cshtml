
@model trova_libro.manager.Models.Libro


<dl class="row">
    <dt class="col-sm-3 col-6">Data inserimento</dt>
    <dd class="col-sm-3 col-6">@Model.dataInserimento.ToString("dd/MM/yyyy")</dd>
    <dt class="col-sm-3 col-6">Utente</dt>
    <dd class="col-sm-3 col-6">@Model.login</dd>


    <dt class="col-sm-3 col-6">Tipo annuncio</dt>
    <dd class="col-sm-3 col-6">@Model.tipo</dd>
    <dt class="col-sm-3 col-6">Categoria</dt>
    <dd class="col-sm-3 col-6">@Model.categoria</dd>


    <dt class="col-sm-3 col-6">Titolo</dt>
    <dd class="col-sm-3 col-6">@Model.titolo</dd>
    <dt class="col-sm-3 col-6">Autore</dt>
    <dd class="col-sm-3 col-6">@MyHelper.decodeNull(Model.autore)</dd>


    <dt class="col-sm-3 col-6">Casa editrice</dt>
    <dd class="col-sm-3 col-6">@MyHelper.decodeNull(Model.casaEditrice)</dd>
    <dt class="col-sm-3 col-6">Prezzo</dt>
    <dd class="col-sm-3 col-6">@Model.prezzo.ToString("C")</dd>

    <dt class="col-sm-3 col-6">ISBN</dt>
    <dd class="col-sm-3 col-6">@MyHelper.decodeNull(Model.isbn)</dd>
    <dt class="col-sm-3 col-6">Regione</dt>
    <dd class="col-sm-3 col-6">@MyHelper.decodeNull(Model.regione)</dd>

    <dt class="col-sm-3 col-6">Provincia</dt>
    <dd class="col-sm-3 col-6">@MyHelper.decodeNull(Model.provincia)</dd>
    <dt class="col-sm-3 col-6">Comune</dt>
    <dd class="col-sm-3 col-6">@MyHelper.decodeNull(Model.comune)</dd>

</dl>



        console.log("comboProvinciaOnChange selectedValue:" + selectedValue);


        $.getJSON('@Url.Action("GetComuni", "RegioneProvinciaComune")', { provinciaId: selectedValue }, function (dati) {


            $('#comboComune').empty();

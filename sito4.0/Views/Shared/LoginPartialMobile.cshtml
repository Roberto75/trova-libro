@if (Request.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Manage", "Account")">@User.Identity.Name</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("LogOff", "Account")">Log Off</a>
    </li>
    
}
else
{
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Register", "Account")">Registrazione</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Login", "Account")">Login</a>
    </li>

}
